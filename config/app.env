# File Monitoring and Auto-Upload System Environment Variables

# 애플리케이션 환경
APP_ENV=development

# 데이터베이스 설정
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=file_monitor_db
DB_SQLITE_PATH=data/app.db

# API 설정
API_ENDPOINT=http://211.231.137.111:18000
API_TIMEOUT_SECONDS=30
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY_SECONDS=5

# 모니터링 설정
MONITOR_SCAN_INTERVAL_MINUTES=1
MONITOR_MAX_FILE_SIZE=10485760

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 시스템 설정
SYSTEM_USER=filemonitor
SYSTEM_GROUP=filemonitor
SYSTEM_WORKING_DIRECTORY=/opt/file-monitor
